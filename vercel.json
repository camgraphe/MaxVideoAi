{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm --filter frontend... build",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@vercel/next" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ],
  "crons": [
    { "path": "/api/stripe/batch-transfers", "schedule": "0 3 * * *" },
    { "path": "/api/fal/poll", "schedule": "* * * * *" }
  ]
}
