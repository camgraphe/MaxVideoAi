# Database
DATABASE_URL=postgres://videohub:videohub@localhost:5432/videohub
# Optional shadow database for Drizzle migrations (set if using a separate instance)
# SHADOW_DATABASE_URL=postgres://videohub:videohub@localhost:5433/videohub_shadow

# Object storage (S3 / Cloudflare R2)
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=auto
S3_BUCKET=videohub-uploads
# Optional overrides
# S3_ENDPOINT=https://accountid.r2.cloudflarestorage.com
# S3_PUBLIC_BASE_URL=https://cdn.example.com
# S3_FORCE_PATH_STYLE=true

# FAL provider
FAL_KEY=your-fal-api-key
# Legacy alias supported
# FAL_API_KEY=your-fal-api-key
# Optional overrides
# FAL_API_BASE=https://api.fal.ai
# FAL_TIMEOUT_MS=20000
# FAL_QUEUE_LOGS_DEFAULT=0
# FAL_WEBHOOK_PATH=/api/fal/webhook
# FAL_JWKS_URL=https://rest.alpha.fal.ai/.well-known/jwks.json
# FAL_PRICE_MARKUP=1.35
# FAL_PRICE_CACHE_TTL_MS=300000

# Application URL for webhook callbacks
APP_URL=https://videohub.local

# Supabase (optional)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=public-anon-key
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Stripe billing (optional)
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# STRIPE_PRICE_SMALL=price_xxx
# STRIPE_PRICE_MEDIUM=price_xxx
# STRIPE_PRICE_LARGE=price_xxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
